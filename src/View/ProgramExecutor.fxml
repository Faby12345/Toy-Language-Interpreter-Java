<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ProgramExecutorController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Number of PrgStates:" />
                        <TextField fx:id="numberOfPrgStatesTextField" editable="false" />
                    </children>
                </HBox>

                <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Heap Table" />
                                <TableView fx:id="heapTableView" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="addressColumn" text="Address" />
                                        <TableColumn fx:id="valueColumn" text="Value" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Output" />
                                <ListView fx:id="outputListView" prefHeight="200.0" prefWidth="200.0" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="File Table" />
                                <ListView fx:id="fileTableListView" prefHeight="200.0" prefWidth="200.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="PrgState IDs" />
                                <ListView fx:id="prgStateIdentifiersListView" prefHeight="200.0" prefWidth="100.0" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Symbol Table" />
                                <TableView fx:id="symbolTableView" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="varNameColumn" text="Variable Name" />
                                        <TableColumn fx:id="varValueColumn" text="Value" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="ExeStack" />
                                <ListView fx:id="exeStackListView" prefHeight="200.0" prefWidth="200.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Button fx:id="runOneStepButton" mnemonicParsing="false" onAction="#runOneStep" text="Run One Step" />
            </children>
        </VBox>
    </children>
</AnchorPane>