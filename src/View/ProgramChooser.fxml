<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ProgramChooserController">
    <children>
        <Label text="Select a Program to Execute">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <ListView fx:id="programsListView" prefHeight="300.0" prefWidth="400.0" />

        <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButton" text="Start Program" />
    </children>
</VBox>